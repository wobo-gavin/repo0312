<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./tests/bootstrap.php"
         colors="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         testSuiteLoaderClass="PHPUnit_Runner_StandardTestSuiteLoader">

    <testsuites>
        <testsuite name="/* Replaced /* Replaced /* Replaced Guzzle */ */ */">
            <directory>./tests//* Replaced /* Replaced /* Replaced Guzzle */ */ *//Tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">./library//* Replaced /* Replaced /* Replaced Guzzle */ */ */</directory>
        </whitelist>
    </filter>

</phpunit>